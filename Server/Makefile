#PKG_DIR		=	$(HOME)/Golgi-Pkg/LATEST/
#PKG_DIR		=	$(HOME)/Golgi-Pkg/v2-08-03/
PKG_DIR		=	$(HOME)/Golgi-Pkg/v3-03-00/
JDK_BIN		=	/usr/bin
JRE_BIN		=	/usr/bin


LOG4J_JAR	=	apache-log4j-1.2.17/log4j-1.2.17.jar
HTTP_CLIENT_JAR	=	httpcomponents-client-4.3.6/lib/httpclient-4.3.6.jar
JAVAC		=	$(JDK_BIN)/javac
JAVA		=	$(JRE_BIN)/java
JAR		=	$(JDK_BIN)/jar
CLASSPATH	=	$(PKG_DIR)/common/garrick_combined.jar:$(PKG_DIR)/common/golgi_j2se.jar
JO_DIR		=	io/golgi/example/gen

all:
	mkdir -p $(JO_DIR)
	$(JAVA) -classpath $(CLASSPATH) com.openmindnetworks.golgi.garrick.Garrick -i ../TapTelegraph.thrift  -jo $(JO_DIR)
	$(JAVAC) -classpath $(CLASSPATH) io/golgi/example/gen/*.java io/golgi/example/*.java
	$(JAR) -Mcf GolgiBird.jar io/golgi/example/gen/*.class io/golgi/example/*.class

clean:
	@
	@find . -name '*.java' | while read f; do if [ `head -2 $$f | egrep -c "IS_AUTOGENERATED_SO_ALLOW_AUTODELETE=YES"` = "1" ]; then echo "Delete $$f"; rm -f $$f; fi; done
	@find . -name '*.class' | xargs rm
	@find . -name '*~' | xargs rm
	@rm -f GolgiBird.jar

spotless:clean
	@rm -rf apache-log4j-* httpcomponents-client-*


RTCP	=	 GolgiBird.jar:$(PKG_DIR)/common/golgi_j2se.jar:$(LOG4J_JAR):$(HTTP_CLIENT_JAR)

run:all $(LOG4J_JAR) $(HTTP_CLIENT_JAR)
	$(JAVA) -classpath $(RTCP) io.golgi.example.Server -devKey `cat ../GolgiBird.DevKey` -appKey `cat ../GolgiBird.AppKey`


$(LOG4J_JAR):
	@echo "***** Downloading log4j *****"
	@curl -s http://ftp.heanet.ie/mirrors/www.apache.org/dist/logging/log4j/1.2.17/log4j-1.2.17.tar.gz | tar -xzf - $(LOG4J_JAR)

$(HTTP_CLIENT_JAR):
	@echo "***** Downloading httpclient *****"
	@curl -s http://ftp.heanet.ie/mirrors/www.apache.org/dist//httpcomponents/httpclient/binary/httpcomponents-client-4.3.6-bin.tar.gz | tar -xzf - $(HTTP_CLIENT_JAR)

